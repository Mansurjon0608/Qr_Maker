<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/pin_bg"
    tools:context=".MainActivity2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgTitle"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:src="@drawable/splash_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/liner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/imgTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_pin_lines"
            app:layout_constraintTop_toBottomOf="@id/liner"/>

        <LinearLayout
            android:id="@+id/liner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/liner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:foreground="?selectableItemBackground"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText,UnusedAttribute"
               />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/liner1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/liner2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/liner3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNumDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="43dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNum0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tvBackspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingHorizontal="27dp"
                android:src="@drawable/ic_backspace"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>